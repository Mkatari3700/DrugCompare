@model DrugCompare.Models.DashboardViewModel

<h3>Prescription Details</h3>

<article>
    <div>
        <table border="1">
            <tr>
                <td align="center">Drug Name</td>
                <td align="center">Doseage Name</td>
                <td align="center">Drug Quantity</td>
                <td align="center">Drug Price</td>
                <td align="center">Frequecncy</td>
                @*<input type="button" class="btn btn-primary" id="btn_AddNewDrug" /><i class="fa fa-plus-square"></i>Add New Prescrition*@
                <td align="center"><a href="@Url.Action("AddNewPrescription","Home")" class="btn btn-default"><i class="fa fa-plus-square"></i> Add New Prescrition</a>
            </tr>
            @foreach (var item in Model.SelectedPrescriptionVM)
            {
                <tr>
                    <td>
                        @Html.Hidden("DrugId", @item.DrugId)
                        <span>@item.DrugName</span>
                    </td>
                    <td>
                        @Html.Hidden("DoseId", @item.DoseId)
                        <span>@item.DoseageName</span>
                    </td>
                    <td>
                        <span>@item.DrugQuantity</span>
                    </td>
                    <td>
                        <span>@item.DrugPrice</span>
                    </td>
                    <td>
                        <span>@item.FrequencyName</span>
                    </td>
                    <td>
                        <a href="@Url.Action("AddOrEdit","Employee")" class="btn btn-default"><i class="fas fa-fill-drip"></i> Refilling \ Alternatives</a>
                    </td>

                </tr>
            }
        </table>
    </div>
</article>

<script type="text/javascript">
