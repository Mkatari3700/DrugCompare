@model DrugCompare.Models.DashboardViewModel

<h3>Plan Details</h3>


<article>
    <div class="form-group">
        <table border="1">
            <tr>
                <td align="center">Plan Name</td>
                <td align="center">Plan Type</td>
                <td align="center">Plan Year</td>
                <td align="center"></td>
            </tr>

            @foreach (var item in Model.SelectedPlanInfoVM)
            {
                <tr>
                    <td>
                        @Html.Hidden("PlanId", @item.PlanId)
                        <span>@item.PlanName</span>
                    </td>
                    <td>
                        <span>@item.PlanTypeName</span>
                    </td>
                    <td>
                        <span>@item.PlanYear</span>
                    </td>
                    <td>
                        <a id="btn_selectPlan" class="btn btn-default"><i class="fas fa-sync"></i> Change Plan</a>
                    </td>
                </tr>
            }
        </table>
    </div>

    <article>
        <div class="modal fade" id="selectPlanModalPopUp" role="dialog">
            <div class="modal-dialog err-pop" style="">
                <div class="modal-content">
                    <div class="modal-header">
                        <span>Plan Details</span>
                        <button id="DivClose" type="button" class="close" data-dismiss="modal">&times;</button>
                    </div>
                    <div class="modal-body" style="text-align:center;">
                        <div>
                            <table class="table-bordered table-striped" border="1">
                                <tr>
                                    <td>Select</td>
                                    <td>Plan Names</td>
                                </tr>

                                @foreach (var item in Model.PlanLists)
                                {
                                    <tr>
                                        <td>
                                            <input id="Planid" name="PlanId" type="radio" planid="@item.PlanId" />
                                        </td>
                                        <td>
                                            @*@Html.Hidden("PlanId", @item.PlanId)*@
                                            @item.PlanName
                                        </td>
                                    </tr>
                                }
                                <tr>
                                    <td colspan="2">
                                        @*<%= Html.Button("Action", "Controller") %>
                                            <input type="button"
                                                   value="Go Somewhere Else"
                                                   onclick="location.href='<%: Url.Action(" Action", "Controller" ) %>'" />*@

                                        @*<a id="btn_PlanSubmit" href="@Url.Action("PlanList", "Home")" class="btn btn-default">Select Plan</a>*@
                                        <input id="btn_PlanSubmit" type="button" value="Select Plan" class="btn btn-default" />
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </article>

</article>

<script src="https://code.jquery.com/jquery-1.10.0.min.js"
        integrity="sha256-2+LznWeWgL7AJ1ciaIG5rFP7GKemzzl+K75tRyTByOE="
        crossorigin="anonymous"></script>

<script>
    $("#btn_selectPlan").click(function () {
        $('#selectPlanModalPopUp').modal('show');
    });
    var k=0;
    $("input[name=PlanId]").click(function () {

        k = $(this).attr("planid");
        $('#btn_PlanSubmit').val("Save Selected Plan");
        $('#btn_PlanSubmit').addClass("text-success");
        console.log(k);
    });

    $('#btn_PlanSubmit').on('click', function () {
        debugger;
        var SelectedPlanId = parseInt(k);

        $.ajax({
            type: "POST",
            url: "PlanList",
            content: "application/json; charset=utf-8",
            dataType: "json",
            cache: false,
            data: { 'SelectedPlanId': SelectedPlanId },
            success: function (d) {
                if (d.success == true) {
                    debugger;
                    window.location = "index.html";
                }
                else { }
            },
            error: function (xhr, textStatus, errorThrown) {
                debugger;
                console.log(xhr.responseText);
            }
        });

        $('#selectPlanModalPopUp').modal('hide');


    });

